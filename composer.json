{
    "name": "mohebifar/calendar-bundle",
    "type": "symfony-bundle",
    "description": "CalendarBundle is a Symfony2 bundle which helps you to show Datetimes based on a calendar.",
    "keywords": ["calendar", "hejri", "persian calendar", "gregorian"],
    "homepage": "http://mohebifar.ir",
    "license": "GNU",
    "minimum-stability": "dev",
    "authors": [
        {
            "name": "Mohamad Mohebifar",
            "homepage": "https://mohebifar.ir"
        }
    ],
    "archive": {
        
    },
    "require": {
        "php":                      ">=5.3.2",
        "symfony/framework-bundle": ">=2.0.16,~2.0"
    },

    "require-dev": {
        "twig/twig":                ">=1.0,<2.0-dev",
        "symfony/yaml":             ">=2.0.16,~2.0"
    },

    "suggest": {
        "twig/twig":                ">=1.0,<2.0-dev"
    },

    "autoload": {
        "psr-0": { "Mohebifar\\CalendarBundle": "" }
    },

    "target-dir": "Mohebifar/CalendarBundle"
}